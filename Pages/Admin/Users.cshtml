@page
@model PRAKTOSWEBAPI.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-users"></i> Управление пользователями
    </div>
    
    <div style="margin-bottom: 1.5rem;">
        <a asp-page="/Admin/CreateUser" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Создать админа/менеджера
        </a>
    </div>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Логин</th>
                    <th>Telegram ID</th>
                    <th>Роль</th>
                    <th>Подтвержден</th>
                    <th>Дата регистрации</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.TelegramId</td>
                        <td>
                            <span class="badge @(user.Role == "Admin" ? "badge-danger" : user.Role == "Manager" ? "badge-info" : "badge-success")">
                                @(user.Role == "Admin" ? "Админ" : user.Role == "Manager" ? "Менеджер" : "Студент")
                            </span>
                        </td>
                        <td>
                            @if (user.IsConfirmed)
                            {
                                <span class="badge badge-success">Да</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Нет</span>
                            }
                        </td>
                        <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            <form method="post" style="display: inline;">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <input type="hidden" name="action" value="toggleRole" />
                                <select name="newRole" onchange="this.form.submit()" class="form-control" style="width: auto; display: inline-block;">
                                    <option value="Applicant" selected="@(user.Role == "Applicant")">Студент</option>
                                    <option value="Manager" selected="@(user.Role == "Manager")">Менеджер</option>
                                    <option value="Admin" selected="@(user.Role == "Admin")">Админ</option>
                                </select>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

