@page
@model PRAKTOSWEBAPI.Pages.Manager.SpecialtiesModel
@{
    ViewData["Title"] = "Специальности";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-book"></i> Управление специальностями
    </div>
    
    <div style="margin-bottom: 1.5rem;">
        <button class="btn btn-primary" onclick="showAddForm()">
            <i class="fas fa-plus"></i> Добавить специальность
        </button>
    </div>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Название</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var specialty in Model.Specialties)
                {
                    <tr>
                        <td>@specialty.Id</td>
                        <td>@specialty.Name</td>
                        <td>
                            <button class="btn btn-secondary" onclick="editSpecialty(@specialty.Id, '@specialty.Name')">
                                <i class="fas fa-edit"></i> Редактировать
                            </button>
                            <form method="post" style="display: inline; margin-left: 0.5rem;">
                                <input type="hidden" name="specialtyId" value="@specialty.Id" />
                                <input type="hidden" name="action" value="delete" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Удалить специальность?')">
                                    <i class="fas fa-trash"></i> Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal for Add/Edit -->
<div id="specialtyModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
    <div class="card" style="max-width: 500px; width: 90%;">
        <div class="card-header">
            <span id="modalTitle">Добавить специальность</span>
            <button onclick="closeModal()" style="float: right; background: none; border: none; color: var(--text-primary); cursor: pointer;">&times;</button>
        </div>
        <form method="post" id="specialtyForm">
            <input type="hidden" name="action" id="formAction" value="add" />
            <input type="hidden" name="specialtyId" id="formSpecialtyId" />
            <div class="form-group">
                <label class="form-label">Название</label>
                <input type="text" class="form-control" name="name" id="formName" required />
            </div>
            <div style="display: flex; gap: 1rem;">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <button type="button" class="btn btn-secondary" onclick="closeModal()">Отмена</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showAddForm() {
            document.getElementById('modalTitle').textContent = 'Добавить специальность';
            document.getElementById('formAction').value = 'add';
            document.getElementById('formSpecialtyId').value = '';
            document.getElementById('formName').value = '';
            document.getElementById('specialtyModal').style.display = 'flex';
        }
        
        function editSpecialty(id, name) {
            document.getElementById('modalTitle').textContent = 'Редактировать специальность';
            document.getElementById('formAction').value = 'edit';
            document.getElementById('formSpecialtyId').value = id;
            document.getElementById('formName').value = name;
            document.getElementById('specialtyModal').style.display = 'flex';
        }
        
        function closeModal() {
            document.getElementById('specialtyModal').style.display = 'none';
        }
    </script>
}

