@page
@model PRAKTOSWEBAPI.Pages.Manager.ApplicationsModel
@{
    ViewData["Title"] = "Заявки";
}

<div class="card">
    <div class="card-header">
        <i class="fas fa-file-alt"></i> Управление заявками
    </div>
    
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>ФИО</th>
                    <th>Специальность</th>
                    <th>Средний балл</th>
                    <th>Статус</th>
                    <th>Дата подачи</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model.Applications)
                {
                    <tr>
                        <td>@app.Id</td>
                        <td>@app.FullName</td>
                        <td>@app.SpecialtyName</td>
                        <td><strong>@app.AverageScore.ToString("F2")</strong></td>
                        <td>
                            <span class="badge @(app.Status == "Approved" ? "badge-success" : app.Status == "Rejected" ? "badge-danger" : "badge-warning")">
                                @(app.Status == "Approved" ? "Одобрено" : app.Status == "Rejected" ? "Отклонено" : "На рассмотрении")
                            </span>
                        </td>
                        <td>@app.SubmittedAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            @if (app.Status == "Pending")
                            {
                                <form method="post" style="display: inline;">
                                    <input type="hidden" name="applicationId" value="@app.Id" />
                                    <input type="hidden" name="action" value="approve" />
                                    <button type="submit" class="btn btn-success" style="padding: 0.5rem 1rem; font-size: 0.875rem;">
                                        <i class="fas fa-check"></i> Одобрить
                                    </button>
                                </form>
                                <form method="post" style="display: inline; margin-left: 0.5rem;">
                                    <input type="hidden" name="applicationId" value="@app.Id" />
                                    <input type="hidden" name="action" value="reject" />
                                    <button type="submit" class="btn btn-danger" style="padding: 0.5rem 1rem; font-size: 0.875rem;">
                                        <i class="fas fa-times"></i> Отклонить
                                    </button>
                                </form>
                            }
                            <a href="#" class="btn btn-secondary" style="padding: 0.5rem 1rem; font-size: 0.875rem; margin-left: 0.5rem;">
                                <i class="fas fa-eye"></i> Детали
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


